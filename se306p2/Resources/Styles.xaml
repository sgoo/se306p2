<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 
    Hold common styles for our application.
    Eg:  For buttons, text, headings etc
    
    To use, add the following to your element:
    Style="{StaticResource StyleKey}"
    Eg:  Style="{StaticResource Title}"
    
    You can override style properties by simply defining
    them after you've included the style.
    -->
    
    <!-- Titles-->
    <Style TargetType="TextBlock" x:Key="Title">
        <Setter Property="FontFamily" Value="Constantia" />
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Margin" Value="20px" />
    </Style>

    <!-- Ordinary Text-->
    <Style TargetType="TextBlock" x:Key="NormalText">
        <Setter Property="FontFamily" Value="Constantia" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Margin" Value="20px" />
    </Style>

    <!-- Page Backgrounds-->
    <Style TargetType="Grid" x:Key="PageBackground">
        <Setter Property="Background"  Value="White" />
    </Style>

    <!-- Images -->
    <Style TargetType="Image" x:Key="Img">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="20px" />
        
        <!-- TODO -->
    </Style>

    <!-- Videos-->
    <Style TargetType="MediaElement" x:Key="Video">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="UnloadedBehavior" Value="Stop" />
        <Setter Property="Margin" Value="20px" />

        <!-- TODO:  Other properties. -->
    </Style>
    
</ResourceDictionary>