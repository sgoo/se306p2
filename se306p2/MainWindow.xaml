<s:SurfaceWindow x:Class="se306p2.MainWindow"
				 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				 xmlns:s="http://schemas.microsoft.com/surface/2008"
				 xmlns:system="clr-namespace:System;assembly=mscorlib"
				 xmlns:local="using:se306p2"
				 Title="se306p2"
				 WindowStyle="None"
				 WindowState="Maximized"
				 mc:Ignorable="d"
				 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				 SizeToContent="WidthAndHeight" d:DesignHeight="877">
	<s:SurfaceWindow.Resources>
		<ResourceDictionary>
			<GridLength x:Key="BorderSize">300</GridLength>
		</ResourceDictionary>
	</s:SurfaceWindow.Resources>
	<s:SurfaceScrollViewer Margin="0,0,0,0">
		<Grid Width="1920"
			  Height="1050"
			  Name="MainWindowGrid">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="{StaticResource BorderSize}" />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition Width="{StaticResource BorderSize}" />
			</Grid.ColumnDefinitions>
            <s:SurfaceListBox Name="LeftScatterBar"
						   Grid.Row="0"
						   Grid.Column="0"
						   Grid.RowSpan="2"
						   PreviewTouchDown="OnBorderDrag"
						   PreviewMouseLeftButtonDown="OnBorderDrag"
                              Background ="Aqua">
                
                
                
            </s:SurfaceListBox>
            <s:SurfaceListBox Name="RightScatterBar"
						   Grid.Row="0"
						   Grid.Column="3"
						   Grid.RowSpan="2"
						   PreviewTouchDown="OnBorderDrag"
						   PreviewMouseLeftButtonDown="OnBorderDrag"
                            Background ="Aqua"  >
                <s:SurfaceListBoxItem
                    FontSize="50"
                    Height="110"
                    Margin="0 40 0 0"
                    >
                    first
                </s:SurfaceListBoxItem>
                <s:SurfaceListBoxItem
                    FontSize="50"
                    Height="110"
                    Margin="0 0 0 50"
                    >
                    first
                </s:SurfaceListBoxItem>
                <s:SurfaceListBoxItem
                    FontSize="50"
                    Height="110"
                    >
                    first
                </s:SurfaceListBoxItem>
                <s:SurfaceListBoxItem
                    FontSize="50"
                    Height="110"
                     Margin="0 0 0 50"
                    
                    >
                    first
                </s:SurfaceListBoxItem>
                <s:SurfaceListBoxItem
                    FontSize="50"
                    Height="110"
                    >
                    first
                </s:SurfaceListBoxItem>
                <s:SurfaceListBoxItem
                    FontSize="50"
                    Height="110"
                    >
                    first
                </s:SurfaceListBoxItem>

                           
            </s:SurfaceListBox>
			<StackPanel Name="DefaultPanel" Grid.Column="1"
						Grid.RowSpan="2"
						Grid.ColumnSpan="2"
						AllowDrop="True"
						s:SurfaceDragDrop.Drop="DefaultPanel_Drop" Margin="0,-2,0,0"
                        Background ="Azure">
				
			</StackPanel>
		</Grid>
	</s:SurfaceScrollViewer>
</s:SurfaceWindow>
