<UserControl
    x:Class="se306p2.CourseSE"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:local="clr-namespace:se306p2"
    mc:Ignorable="d"
    d:DesignHeight="1080"
    d:DesignWidth="1350">

    <!-- Include styles dictionary -->
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/Styles.xaml" />
    </UserControl.Resources>

    <Grid
        Style="{StaticResource PageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock
            Style="{StaticResource Title}"
            Grid.Row="0"
            Grid.ColumnSpan="2">
            Software Engineering Courses
        </TextBlock>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Foreground="White" Text="Slide in/out:" VerticalAlignment="Center"/>
                <s:SurfaceButton Content="previous" Click="PreviousButton"/>
                <s:SurfaceButton Content="next" Click="NextButton"/>
            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Name="_touchGrid"
                MouseDown="_touchGrid_TouchDown"  
                MouseUp="_touchGrid_TouchUp"
                MouseMove="_touchGrid_TouchMove">
                
            <Grid Name="_page1" Background="White" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Text="SOFTEARE ENGINEERING" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" Foreground="Purple"/>
            </Grid>
            <Grid Name="_page2" Background="AliceBlue" Visibility="Collapsed">
                <s:ScatterView>
                    <Label Width="200" Height="100" Content="Touch"/>
                </s:ScatterView>
            </Grid>
            <Grid Name="_page3" Background="LightGray" Visibility="Collapsed">
                <Canvas>
                </Canvas>
            </Grid>
        </Grid>


    </Grid>
</UserControl>
