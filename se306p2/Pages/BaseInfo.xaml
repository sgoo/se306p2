<UserControl x:Class="se306p2.BaseInfo"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:s="http://schemas.microsoft.com/surface/2008"
			 mc:Ignorable="d"
			 d:DesignHeight="1080"
			 d:DesignWidth="1350"
			 IsVisibleChanged="UserControl_IsVisibleChanged">

	<UserControl.Resources>
		<ImageBrush x:Key="Background"
					ImageSource="/se306p2;component/Resources/themes/general.jpg" />
	</UserControl.Resources>

	<Grid Style="{StaticResource PageBackground}">

		<Grid.RowDefinitions>
			<RowDefinition Height="150" />
			<RowDefinition Height="0.40*" />
			<RowDefinition Height="0.40*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.5*" />
			<ColumnDefinition Width="0.5*" />
		</Grid.ColumnDefinitions>

		<s:SurfaceScrollViewer Grid.ColumnSpan="2"
							   Margin="8,0,-7.5,0">
		</s:SurfaceScrollViewer>

        <TextBlock Grid.Row="0"
				   Grid.Column="0"
				   Grid.ColumnSpan="2"
				   Style="{StaticResource Title}">
            <!-- 
				   d:LayoutOverrides="Width, GridBox"
				   AllowDrop="True"
				   Focusable="True"
				   LineStackingStrategy="BlockLineHeight"
				   TextWrapping="Wrap">-->
				   
			Electrical and Computer Engineering Department
		</TextBlock>

		<s:LibraryBar Name="MainLibraryBar"
					  Rows="1"
					  Grid.Row="1"
					  Grid.Column="0"
					  Grid.ColumnSpan="2"
					  Margin="250,-8,250,62"
					  Background="#00F99D9D"
					  s:SurfaceDragDrop.DragOver="MainLibraryBar_DragOver"
					  BorderThickness="0">
			<s:LibraryBar.ItemTemplate>
				<DataTemplate>
					<Grid>
						<Image Source="{Binding Bitmap}" />
					</Grid>
				</DataTemplate>
			</s:LibraryBar.ItemTemplate>
		</s:LibraryBar>
		<TextBlock Grid.Row="2"
				   Style="{StaticResource NormalText}"
				   Margin="93.5,-52.5,0,0"
				   HorizontalAlignment="Left"
				   TextWrapping="Wrap"
				   Width="534"
				   Height="443"
				   LineHeight="16"
				   VerticalAlignment="Top"
				   Opacity="0.81"><Run Text="The " /><Run FontWeight="Bold"
													   FontStyle="Italic"
													   Text="Faculty of Engineering" /><Run Text=" is committed to creating an environment where people thrive and contribute to improving the quality of life in national and global communities,  as well as enhancing the wealth creation of the nation, through excellence in teaching, research and service." /><LineBreak /><Run /><LineBreak /><Run Text="If you are creative, curious, resourceful, enjoy working with people, designing solutions to problems, and want to use your skills to make a difference then engineering is right for you! " /></TextBlock>
		<MediaElement Name="_mediaElement"
					  Tag="pause"
					  LoadedBehavior="Manual"
					  UnloadedBehavior="Play"
					  Source="Resources\sampleVid.mp4"
					  MediaEnded="_mediaElement_MediaEnded"
					  PreviewTouchDown="_mediaElement_PreviewTouchDown"
					  PreviewMouseLeftButtonDown="_mediaElement_PreviewTouchDown"
					  Grid.Row="2"
					  Grid.Column="1"
					  Margin="0,-52.5,83.112,73.5" />
		<Button Name="playButton"
				Grid.Row="2"
				Grid.Column="1"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="213,63,308,221"
				Height="148"
				Width="154"
				PreviewTouchDown="_mediaElement_PreviewTouchDown"
				PreviewMouseLeftButtonDown="_mediaElement_PreviewTouchDown">
			<Image Source="/Resources/video_play.png"
				   HorizontalAlignment="Stretch"
				   VerticalAlignment="Stretch" />

		</Button>
	</Grid>
</UserControl>
